<Window x:Class="HtmlParse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HtmlParse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Right" Margin="0,20,0,0" VerticalAlignment="Top" Width="75" Click="IStart" RenderTransformOrigin="0.467,-3.0"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Right" Margin="0,60,0,0" VerticalAlignment="Top" Width="75" Click="IStop"/>
        <TextBox x:Name="StartPoint" HorizontalAlignment="Right" Width="75" Margin="0,90,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" KeyDown="ES_Correct"/>
        <TextBox x:Name="EndPoint" HorizontalAlignment="Right" Width="75" Margin="0,120,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" KeyDown="EP_Correct"/>
        <TextBox x:Name="OUT" HorizontalAlignment="Stretch"  Margin="10,11,125,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch"/>

    </Grid>
</Window>